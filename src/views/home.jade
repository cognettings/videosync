doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    meta(name='description', content='Watch Youtube with friends.')
    meta(name='author', content='John Cognetti')
    link(rel='icon', href='../../favicon.ico')
    title WeTube - Watch Youtube with friends
    // Bootstrap core CSS
    link(href='bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
    // Custom styles for this template
    link(href='css/jumbotron-narrow.css', rel='stylesheet')
    script(src='js/home.js')
  body
    .container
      .header
        nav
          ul.nav.nav-pills.pull-right
            li.active(role='presentation')
              a(href='/') Home
            li(role='presentation')
              a(href='/watch') Watch
            li(role='presentation')
              a(href='/history') History
        h1
          WeTube 
          small Watch Youtube with friends
      .jumbotron
        h2 Select a YouTube video
        .input-group
          input.form-control#lblVideoUrl(type='text', placeholder='URL')
          span.input-group-btn
            button.btn.btn-default#btnWatch(type='button') Watch
      .panel.panel-default
        .panel-heading
          h3.panel-title Currently playing
        if currentlyPlaying
          .panel-body
            .media
              .media-left
                a(href=currentlyPlaying.youtubeUrl)
                  img.media-object.img-rounded(src=currentlyPlaying.thumbnail, alt='video thumbnail')
              .media-body
                h4.media-heading
                  |#{currentlyPlaying.title}
                p 
                  |#{currentlyPlaying.author}
                  br
                  |#{currentlyPlaying.duration}
        else
          .panel-body
            h2 Nothing is currently playing
